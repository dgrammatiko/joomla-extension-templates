<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" element="com_{{extensionNameLowercase}}">
  <name>com_{{extensionNameLowercase}}</name>
  <element>com_{{extensionNameLowercase}}</element>
  <author>{{authorName}}</author>
  <creationDate>{{date}}</creationDate>
  <copyright>{{copyright}}</copyright>
  <license>{{license}}</license>
  <authorEmail>{{authorEmail}}</authorEmail>
  <authorUrl>{{authorWebsite}}</authorUrl>
  <version>{{version}}</version>
  <description>COM_{{extensionNameUppercase}}_XML_DESCRIPTION</description>
  <namespace path="src">{{companyNamePascal}}\Component\{{extensionNamePascal}}</namespace>
  <files folder="site">
    <folder>src</folder>
    <folder>tmpl</folder>
    <folder>language</folder>
  </files>
  <media folder="media" destination="com_{{extensionNameLowercase}}">
    <folder>js</folder>
    <folder>css</folder>
    <folder>images</folder>
  </media>
  <administration>
    <files folder="administrator">
      <folder>services</folder>
      <folder>language</folder>
    </files>
  </administration>
</extension>
